{
 "compilerOptions": {
  "target": "es5",
  "lib": ["dom", "dom.iterable", "esnext"], // Список файлов библиотеки для включения в компиляцию
  "allowJs": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "noFallthroughCasesInSwitch": true,
  "module": "esnext",
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "jsx": "react",
  "baseUrl": ".",
  "paths": {
   "@src/*": ["src/*"],
   "@app/*": ["app/*"],
   "@assets/*": ["src/assets/*"],
   "@dist/*": ["dist/*"],
   "@config/*": ["app/*"],
   "@environment/*": ["environments/*"],
   "@shared/*": ["app/_shared/*"],
   "@helpers/*": ["helpers/*"],
   "@images/*": ["src/assets/*"]
  }
 },
 "include": [
  "src",
  "dist",
 ],
 "exclude": ["node_modules", "build"] //  *** Файлы, которые не нужно вводить, проверять ***
}
